extends layout

block content
    section.hero.is-info.is-fullheight(style="background-image: url(/images/background_etho.jpg)")
        .hero-body
            .row
                .container.has-text-centered
                    .col-12
                        h1.text-light
                            | Receive #{faucetAmount} #{faucetCurrency}
                        h4.text-light Step 2: Tweet the following text
            .row
                    .col-4
                    .col-4.bg-white.p-3
                        form(method='POST', action='/start/2')
                            .form-group
                                label(for="inputTweetID") Enter your twitter name
                                input#inputTweetID.form-control(name="tweetid", value=`${tweetid}`)

                                input#inputId.form-control(name="ethoaddr", value=`${ethoaddr}` hidden)
                                label(for="inputTweet") This is the tweet you should send unchanged
                                textarea#inputTweet.form-control(name="inputtweet", placeholder=`${tweet}` rows=6)
                                p When you press tweet your twitter page will be opened in a new window. After You sent the tweet return to this window and press next step.

                                span#container-twitter
                                    a.twitter-share-button(href="https://twitter.com/share?url=faucet.ethoprotocol.com", data-hashtags="ipfs,web3,NFT,mint,cloud,crypto", data-text=`${tweet}` data-src="large") Tweet
                                    script(async, src="https://platform.twitter.com/widgets.js", charset="utf-8")
                                p After the tweet continue here and press the button below
                                button#submitbtn.btn.btn-primary(type="submit") Next step
                    .col-4


    script.
        document.querySelector("button").onclick = function(){
            document.querySelector("textarea").select();
            document.execCommand('copy');
        }


